@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model ProjInventroy.ViewModels.SaleCreateVM

<div class="main-content">
    <div class="content-wrapper">
        <div class="page-header">
            <h1>Create Sale</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Sale" asp-action="Index">Sales</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create Sale</li>
                </ol>
            </nav>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Sale Information</h4>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Sale" asp-action="Create" method="post" class="form">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label text-md-right" asp-for="SaleDate">Sale Date</label>
                                <div class="col-md-6">
                                    <input type="date" asp-for="SaleDate" class="form-control" required />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    <div class="table-card">
                                        <div class="table-header">
                                            <h5>Sale Items</h5>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th width="45%">Product</th>
                                                        <th width="25%">Quantity</th>
                                                        <th width="25%">Sale Price</th>
                                                        <th width="5%"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @for (int i = 0; i < Model.Items.Count; i++)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <select asp-for="Items[i].ProductId"
                                                                        asp-items="Model.Products"
                                                                        class="form-control">
                                                                    <option value="">Select Product</option>
                                                                </select>
                                                            </td>
                                                            <td>
                                                                <input type="number" asp-for="Items[i].Quantity"
                                                                       class="form-control"
                                                                       min="1"
                                                                       placeholder="Qty" />
                                                            </td>
                                                            <td>
                                                                <input type="number" asp-for="Items[i].SalePrice"
                                                                       class="form-control"
                                                                       step="0.01"
                                                                       min="0"
                                                                       placeholder="0.00" />
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-9 offset-md-3">
                                    <button type="submit" class="btn btn-primary">
                                        Save Sale
                                    </button>
                                    <a asp-controller="Sale" asp-action="Index" class="btn btn-outline-secondary">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .main-content {
        margin-left: 250px;
        padding: 30px;
        min-height: 100vh;
        background: #f5f7fa;
    }

    .content-wrapper {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e3e6f0;
    }

        .page-header h1 {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 28px;
        }

    .breadcrumb {
        background: transparent;
        padding: 0;
        margin-bottom: 0;
    }

    .breadcrumb-item a {
        color: #6c757d;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #2c3e50;
        font-weight: 500;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: ">";
        color: #6c757d;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        background: white;
        margin-bottom: 30px;
    }

    .card-header {
        background: #2c3e50;
        color: white;
        border-radius: 10px 10px 0 0;
        padding: 15px 25px;
        border: none;
    }

        .card-header h4 {
            margin: 0;
            font-weight: 500;
            font-size: 18px;
        }

    .card-body {
        padding: 25px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .form-control {
        border: 1px solid #d1d3e2;
        border-radius: 5px;
        padding: 10px 15px;
        transition: all 0.3s;
        font-size: 14px;
    }

        .form-control:focus {
            border-color: #2c3e50;
            box-shadow: 0 0 0 0.2rem rgba(44, 62, 80, 0.25);
        }

    .btn {
        padding: 10px 25px;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-primary {
        background: #2c3e50;
        color: white;
        border: 1px solid #2c3e50;
    }

        .btn-primary:hover {
            background: #1a252f;
            border-color: #1a252f;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

    .btn-outline-secondary {
        background: transparent;
        color: #6c757d;
        border: 1px solid #d1d3e2;
        margin-left: 10px;
    }

        .btn-outline-secondary:hover {
            background: #f8f9fa;
            color: #2c3e50;
            border-color: #2c3e50;
        }

    .table-card {
        border: 1px solid #e3e6f0;
        border-radius: 5px;
        overflow: hidden;
    }

    .table-header {
        background: #f8f9fa;
        padding: 15px 20px;
        border-bottom: 1px solid #e3e6f0;
    }

        .table-header h5 {
            margin: 0;
            color: #2c3e50;
            font-weight: 500;
        }

    .table {
        width: 100%;
        margin-bottom: 0;
    }

        .table thead th {
            background-color: #f8f9fa;
            color: #2c3e50;
            font-weight: 600;
            border-bottom: 2px solid #e3e6f0;
            padding: 12px 15px;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
        }

        .table tbody td {
            padding: 15px;
            vertical-align: middle;
            border-top: 1px solid #e3e6f0;
        }

    .table-hover tbody tr:hover {
        background-color: rgba(44, 62, 80, 0.03);
    }

    input[type="date"] {
        appearance: none;
        font-family: inherit;
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        opacity: 1;
        height: 30px;
    }

    @@media (max-width: 768px) {
        .main-content {
            margin-left: 0;
            padding: 20px;
        }

        .form-group.row {
            display: block;
        }

        .col-md-3,
        .col-md-6,
        .col-md-9,
        .col-md-12 {
            width: 100%;
            text-align: left;
        }

        .col-md-3 {
            margin-bottom: 10px;
        }

        .offset-md-3 {
            margin-left: 0;
        }

        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .btn {
            display: block;
            width: 100%;
            margin-bottom: 10px;
        }

        .btn-outline-secondary {
            margin-left: 0;
        }
    }
</style>