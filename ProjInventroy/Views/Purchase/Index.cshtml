@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Purchase>

<div class="main-content">
    <div class="content-wrapper">
        <div class="page-header">
            <h1>Purchase Records</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Purchases</li>
                </ol>
            </nav>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4>All Purchases</h4>
                        <a asp-controller="Purchase" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> New Purchase
                        </a>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Purchase ID</th>
                                            <th>Date</th>
                                            <th>Total Amount</th>
                                            <th>Items</th>
                                            <th>Status</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var p in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge badge-light">#PUR-@p.PurchaseId.ToString("D4")</span>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-calendar-alt text-primary me-2"></i>
                                                        @p.PurchaseDate.ToString("dd MMM yyyy")
                                                    </div>
                                                    <small class="text-muted d-block">@p.PurchaseDate.ToString("hh:mm tt")</small>
                                                </td>
                                                <td>
                                                    <strong class="text-success">$@p.TotalAmount.ToString("N2")</strong>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-boxes text-info me-2"></i>
                                                        <span>@p.PurchaseItems.Count item@(p.PurchaseItems.Count != 1 ? "s" : "")</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge badge-success">
                                                        <i class="fas fa-check-circle me-1"></i> Completed
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <a asp-controller="Purchase" asp-action="Details" asp-route-id="@p.PurchaseId"
                                                           class="btn btn-sm btn-outline-info"
                                                           title="View Details">
                                                            <i class="fas fa-eye"></i> View
                                                        </a>
                                                        <a asp-controller="Purchase" asp-action="Edit" asp-route-id="@p.PurchaseId"
                                                           class="btn btn-sm btn-outline-primary"
                                                           title="Edit Purchase">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@p.PurchaseId"
                                                           class="btn btn-sm btn-outline-danger"
                                                           title="Delete Purchase"
                                                           onclick="return confirm('Are you sure you want to delete this purchase?');">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <div class="summary-card p-3 bg-light rounded">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted">Total Purchases:</span>
                                            <strong class="text-primary">@Model.Count</strong>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <span class="text-muted">Total Amount:</span>
                                            <strong class="text-success">$@Model.Sum(p => p.TotalAmount).ToString("N2")</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h3>No Purchase Records Found</h3>
                                <p class="lead">
                                    You haven't made any purchases yet. Start by creating your first purchase record.
                                </p>
                                <a asp-controller="Purchase" asp-action="Create" class="btn btn-primary mt-3">
                                    <i class="fas fa-plus"></i> Create First Purchase
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
