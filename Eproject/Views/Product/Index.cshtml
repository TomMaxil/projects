@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @model List<Product>
}



@if (@TempData["alert"] != null)
{
    <div class="alert alert-success" role="alert" id="Alert">
        @TempData["alert"]
    </div>
}
@if (@TempData["alert1"] != null)
{
    <div class="alert alert-info" role="alert" id="Alert1">
        @TempData["alert1"]
    </div>
}
<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">ALL PRODUCT</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-md">
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Unicost</th>
                                        <th>Quantity</th>
                                        <th>Action</th>
                                    </tr>
                                  <tbody>
                                    @{
                                        var count = 1;
                                   
                                        @foreach(var prod in Model)
                                        {
                                                <tr style="font-style: oblique;">
                                                <td>@count</td>
                                                <td>@prod.ProductName</td>
                                                <td>@prod.unitCost</td>
                                                    <td>@if (prod.quantity > 0)
                                                        {
                                                            <div class="badge badge-success">In Stock</div>
                                                        }
                                                        else
                                                        {
                                                            <div class="badge badge-danger">Out of Stock</div>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@prod.id" class="btn btn-success">Edit</a>
                                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@prod.id" class="btn btn-warning">View</a>
                                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@prod.id" class="btn btn-danger" onclick="return confirm('Are you sure to Delete?')" >Delete</a>
                                                    </td>
                                                 </tr>

                                                count++;
                                        }
                                      
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <nav class="d-inline-block">
                                <ul class="pagination mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">
                                            1 <span class="sr-only">(current)</span>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
             </div>
          </div>
        </section>
      </div>
      <script>
          var div = document.getElementById('Alert')
          setTimeout(()=>{
              div.style.display = "none";
          },5000)
      </script>
<script>
    var div = document.getElementById('Alert1')
    setTimeout(()=>{
        div.style.display = "none";
    },5000)
</script>
