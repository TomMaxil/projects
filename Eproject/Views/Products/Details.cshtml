@{
    Layout = "_Layout";
}
@model Product

<style>
    .supermarket-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 0 15px;
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
    }

    .product-header {
        padding: 15px 20px;
        background: linear-gradient(135deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0 4px 15px rgba(255, 60, 47, 0.2);
    }

        .product-header h1 {
            font-size: 24px;
            font-weight: 700;
            margin: 0;
            line-height: 1.2;
        }

    .product-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 30px;
    }

    @@media (max-width: 992px) {
        .product-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }
    }

    .product-visual-section {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid #f0f0f0;
        position: relative;
    }

    .product-image-container {
        position: relative;
        width: 100%;
        height: 300px;
        background: linear-gradient(135deg, #f8f9fa 0%, #f1f3f5 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    @@media (max-width: 768px) {
        .product-image-container {
            height: 250px;
        }
    }

    .product-main-image {
        width: auto;
        height: auto;
        max-width: 80%;
        max-height: 80%;
        object-fit: contain;
        padding: 20px;
        transition: transform 0.3s ease;
    }

    .product-image-container:hover .product-main-image {
        transform: scale(1.05);
    }

    .product-image-badges {
        position: absolute;
        top: 15px;
        left: 15px;
        display: flex;
        flex-direction: column;
        gap: 8px;
        z-index: 2;
    }

    .image-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .badge-supermart {
        background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        color: white;
    }

    .badge-fresh {
        background: linear-gradient(90deg, #ffd700, #ff9800);
        color: #333;
    }

    .badge-organic {
        background: linear-gradient(90deg, #0a8f45, #4CAF50);
        color: white;
    }

    .product-details-card {
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid #f0f0f0;
        position: relative;
        overflow: hidden;
    }

        .product-details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b, #ff9800);
        }

    .product-title {
        font-size: 22px;
        font-weight: 700;
        color: #222;
        margin-bottom: 15px;
        line-height: 1.3;
    }

    .product-meta-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid #f0f0f0;
    }

    @@media (max-width: 576px) {
        .product-meta-grid {
            grid-template-columns: 1fr;
        }
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        background: #f9f9f9;
        border-radius: 8px;
        font-size: 13px;
    }

        .meta-item i {
            color: #ff3c2f;
            width: 16px;
            text-align: center;
            font-size: 14px;
        }

        .meta-item strong {
            color: #333;
            font-weight: 600;
        }

    .price-display {
        background: linear-gradient(135deg, #f9f9f9 0%, #f0f0f0 100%);
        border-radius: 10px;
        padding: 15px;
        margin: 20px 0;
        border: 1px solid #e8e8e8;
    }

    .current-price {
        font-size: 28px;
        font-weight: 800;
        color: #0a8f45;
        display: flex;
        align-items: baseline;
        gap: 4px;
        margin-bottom: 8px;
    }

    .price-currency {
        font-size: 18px;
        font-weight: 700;
        color: #0a8f45;
    }

    .original-price {
        font-size: 18px;
        color: #ad0000;
        text-decoration: line-through;
        font-weight: 600;
        margin-right: 10px;
    }

    .discount-tag {
        background: linear-gradient(90deg, #ff5722, #ff7043);
        color: white;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 13px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .stock-indicator {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px;
        background: #f9f9f9;
        border-radius: 10px;
        margin: 15px 0;
        border: 1px solid #e8e8e8;
    }

        .stock-indicator.in-stock {
            background: rgba(10, 143, 69, 0.08);
            border-color: rgba(10, 143, 69, 0.2);
        }

        .stock-indicator.out-of-stock {
            background: rgba(255, 60, 47, 0.08);
            border-color: rgba(255, 60, 47, 0.2);
        }

    .stock-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        flex-shrink: 0;
    }

    .stock-indicator.in-stock .stock-icon {
        background: #0a8f45;
        color: white;
    }

    .stock-indicator.out-of-stock .stock-icon {
        background: #ff3c2f;
        color: white;
    }

    .stock-text {
        font-size: 15px;
        font-weight: 600;
        color: #222;
    }

    .product-description-card {
        background: #f9f9f9;
        border-radius: 10px;
        padding: 15px;
        margin: 15px 0;
        border-left: 4px solid #ff3c2f;
    }

    .description-title {
        font-size: 15px;
        font-weight: 700;
        color: #222;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .description-title i {
            color: #ff3c2f;
        }

    .description-content {
        font-size: 14px;
        line-height: 1.6;
        color: #444;
        margin: 0;
    }

    .action-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin: 25px 0 20px;
    }

    @@media (max-width: 576px) {
        .action-buttons {
            grid-template-columns: 1fr;
        }
    }

    .btn-cart {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        padding: 12px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        font-size: 14px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-cart:hover:not(.btn-disabled) {
            background: linear-gradient(90deg, #e62e1f 0%, #ff5252 100%);
            transform: translateY(-2px);
        }

    .btn-buy {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: linear-gradient(90deg, #ff9800 0%, #ffb74d 100%);
        color: white;
        padding: 12px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        font-size: 14px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-buy:hover:not(.btn-disabled) {
            background: linear-gradient(90deg, #e68900 0%, #ffa726 100%);
            transform: translateY(-2px);
        }

    .btn-disabled {
        opacity: 0.5;
        cursor: not-allowed;
        pointer-events: none;
        filter: grayscale(1);
    }

    .trust-badges {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 12px;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
    }

    .trust-badge {
        text-align: center;
        padding: 12px;
        background: #f9f9f9;
        border-radius: 8px;
        border: 1px solid #e8e8e8;
        font-size: 12px;
    }

        .trust-badge i {
            font-size: 20px;
            color: #0a8f45;
            margin-bottom: 8px;
            display: block;
        }

        .trust-badge p {
            margin: 0;
            line-height: 1.4;
        }

    .reviews-section {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid #f0f0f0;
        margin-top: 30px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 700;
        color: #222;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .section-title i {
            color: #ff3c2f;
        }

    .average-rating-badge {
        background: linear-gradient(135deg, #111 0%, #222 100%);
        border-radius: 10px;
        padding: 12px 15px;
        color: white;
        text-align: center;
        min-width: 100px;
    }

    .rating-value {
        font-size: 24px;
        font-weight: 800;
        color: white;
        margin-bottom: 4px;
    }

    .rating-stars {
        font-size: 14px;
        color: #FFD700;
        letter-spacing: 2px;
        margin-bottom: 4px;
    }

    .rating-label {
        font-size: 11px;
        color: #ddd;
        font-weight: 500;
    }

    .reviews-list {
        margin-top: 20px;
    }

    .review-card {
        background: white;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 12px;
        border: 1px solid #f0f0f0;
    }

    .review-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .reviewer-info {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .reviewer-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff3c2f, #ff6b6b);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
