<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="supermarket-container">

    <div class="product-header">
        <h1>@Model.ProductName</h1>
    </div>

    <div class="product-grid">
        <div class="product-visual-section">
            <div class="product-image-badges">
                <span class="image-badge badge-supermart">
                    <i class="fas fa-store"></i> SUPERMART
                </span>
                @if (Model.quantity > 0 && Model.quantity <= 10)
                {
                    <span class="image-badge badge-fresh">
                        <i class="fas fa-bolt"></i> LIMITED
                    </span>
                }
                @if (Model.discount > Model.unitCost)
                {
                    var discountPercent = ((Model.discount - Model.unitCost) * 100) / Model.discount;
                    if (discountPercent >= 30)
                    {
                        <span class="image-badge badge-organic">
                            <i class="fas fa-fire"></i> HOT DEAL
                        </span>
                    }
                }
            </div>

            <div class="product-image-container">
                <img src="~/images/@Model.image" class="product-main-image" alt="@Model.ProductName"
                     onerror="this.src='https://via.placeholder.com/400x300/ffffff/666666?text=Product+Image'" />
            </div>
        </div>

        <div class="product-details-card">
            <h2 class="product-title">@Model.ProductName</h2>

            <div class="product-meta-grid">
                <div class="meta-item">
                    <i class="fas fa-tag"></i>
                    <div><strong>Category</strong><br>@Model.Category?.CategoryName</div>
                </div>
                <div class="meta-item">
                    <i class="fas fa-copyright"></i>
                    <div><strong>Brand</strong><br>@Model.Brand?.BrandName</div>
                </div>
                <div class="meta-item">
                    <i class="fas fa-hashtag"></i>
                    <div><strong>ID</strong><br>@Model.id</div>
                </div>
                <div class="meta-item">
                    <i class="fas fa-box"></i>
                    <div><strong>Units</strong><br>@Model.quantity</div>
                </div>
            </div>

            <div class="price-display">
                <div class="current-price">
                    <span class="price-currency">₹</span>@Model.unitCost
                </div>

                @if (Model.discount > Model.unitCost)
                {
                    var discountPercent = ((Model.discount - Model.unitCost) * 100) / Model.discount;
                    <div style="display: flex; align-items: center; gap: 12px; flex-wrap: wrap; margin-top: 8px;">
                        <span class="original-price">₹@Model.discount</span>
                        <span class="discount-tag">
                            <i class="fas fa-tag"></i> SAVE @Math.Round(discountPercent)%
                        </span>
                    </div>
                }
            </div>

            <div class="stock-indicator @(Model.quantity > 0 ? "in-stock" : "out-of-stock")">
                <div class="stock-icon">
                    <i class="fas @(Model.quantity > 0 ? "fa-check" : "fa-times")"></i>
                </div>
                <div class="stock-text">
                    @if (Model.quantity > 0)
                    {
                        <text>In Stock - @Model.quantity units</text>
                    }
                    else
                    {
                        <text>Out of Stock</text>
                    }
                </div>
            </div>

            <div class="product-description-card">
                <div class="description-title">
                    <i class="fas fa-info-circle"></i>
                    <span>Description</span>
                </div>
                <p class="description-content">@Model.description</p>
            </div>

            <div class="action-buttons">
                <a asp-controller="Customer" asp-action="AddCart" asp-route-productId="@Model.id"
                   class="btn-cart @(Model.quantity <= 0 ? "btn-disabled" : "")"
                   style="@(Model.quantity <= 0 ? "opacity:0.6;cursor:not-allowed;pointer-events:none;" : "")">
                    <i class="fas fa-cart-plus"></i> Add to Cart
                </a>

                <a href="#"
                   class="btn-buy @(Model.quantity <= 0 ? "btn-disabled" : "")"
                   style="@(Model.quantity <= 0 ? "opacity:0.6;cursor:not-allowed;pointer-events:none;" : "")">
                    <i class="fas fa-bolt"></i> Buy Now
                </a>
            </div>

            <div class="trust-badges">
                <div class="trust-badge">
                    <i class="fas fa-shipping-fast"></i>
                    <p>Free Shipping</p>
                </div>
                <div class="trust-badge">
                    <i class="fas fa-shield-alt"></i>
                    <p>Secure Payment</p>
                </div>
                <div class="trust-badge">
                    <i class="fas fa-undo"></i>
                    <p>Easy Returns</p>
                </div>
                <div class="trust-badge">
                    <i class="fas fa-headset"></i>
                    <p>24/7 Support</p>
                </div>
            </div>
        </div>
    </div>

    <div class="reviews-section">
        <div class="section-header">
            <h2 class="section-title">
                <i class="fas fa-star"></i> Customer Reviews
            </h2>

            @if (ViewBag.AvgRating != null)
            {
                <div class="average-rating-badge">
                    <div class="rating-value">@Math.Round((decimal)ViewBag.AvgRating, 1)</div>
                    <div class="rating-stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= (int)ViewBag.AvgRating)
                            {
                                <i class="fas fa-star"></i>
                            }
                            else if (i - 0.5 <= ViewBag.AvgRating)
                            {
                                <i class="fas fa-star-half-alt"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    </div>
                    <div class="rating-label">@Model.Reviews?.Count Reviews</div>
                </div>
            }
        </div>

        <div class="reviews-list">
            @if (Model.Reviews != null && Model.Reviews.Count > 0)
            {
                foreach (var r in Model.Reviews)
                {
                    <div class="review-card">
                        <div class="review-header">
                            <div class="reviewer-info">
                                <div class="reviewer-avatar">
                                    @r.Customer.FirstName[0]
                                </div>
                                <div>
                                    <div class="reviewer-name">@r.Customer.FirstName @r.Customer.LastName</div>
                                    <div class="review-date">@r.CreatedAt.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                            <div class="review-rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star" style="color: @(i <= r.Rating ? "#FFD700" : "#e0e0e0")"></i>
                                }
                            </div>
                        </div>
                        <p class="review-comment">@r.Comment</p>
                    </div>
                }
            }
            else
            {
                <div class="no-reviews-message">
                    <i class="far fa-star"></i>
                    <h3>No Reviews Yet</h3>
                    <p>Be the first to review this product!</p>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.CanReview == true)
    {
        <div class="review-form-section">
            <h3 class="review-form-title">
                <i class="fas fa-edit"></i> Write a Review
            </h3>

            <form method="post" asp-controller="Review" asp-action="Index">
                <input type="hidden" name="ProductId" value="@Model.id" />

                <div class="form-group">
                    <label class="form-label">Your Rating</label>
                    <select name="Rating" class="form-control" required>
                        <option value="">Select Rating</option>
                        <option value="5">⭐⭐⭐⭐⭐ Excellent</option>
                        <option value="4">⭐⭐⭐⭐ Very Good</option>
                        <option value="3">⭐⭐⭐ Good</option>
                        <option value="2">⭐⭐ Fair</option>
                        <option value="1">⭐ Poor</option>
                    </select>
                </div>

