@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<User>

<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>User Management</h4>
                            <div class="card-header-form">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search users...">
                                    <div class="input-group-btn">
                                        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                            <th>Phone</th>
                                            <th>Joined</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var u in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="mr-3">
                                                            <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 16px;">
                                                                @u.FullName.Substring(0, 1).ToUpper()
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <div style="font-weight: 700; color: #222;">@u.FullName</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div style="color: #6c757d;">@u.Email</div>
                                                </td>
                                                <td>
                                                    @if (u.Role == "Admin")
                                                    {
                                                        <span class="badge badge-danger">@u.Role</span>
                                                    }
                                                    else if (u.Role == "Customer")
                                                    {
                                                        <span class="badge badge-primary">@u.Role</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">@u.Role</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div style="font-weight: 600;">@u.PhoneNumber</div>
                                                </td>
                                                <td>
                                                    <div style="color: #6c757d;">@u.CreatedAt.ToString("dd MMM yyyy")</div>
                                                </td>
                                                <td>
                                                    <div class="badge badge-success">Active</div>
                                                </td>
                                                <td>
                                                    <div class="d-flex">
                                                        <a asp-action="UserDetails" asp-route-id="@u.UserId" class="btn btn-sm btn-outline-primary mr-2">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-action="UserDelete" asp-route-id="@u.UserId" class="btn btn-sm btn-outline-danger">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <div class="float-left">
                                <p class="m-0" style="color: #6c757d;">Showing <b>@Model.Count</b> users</p>
                            </div>
                            <nav class="d-inline-block">
                                <ul class="pagination m-0">
                                    <li class="page-item">
                                        <a class="page-link" href="#">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">3</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .card-header {
        border-bottom: 1px solid #e3e6f0;
        background: #fff;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0,0,0,.02);
    }

    .badge-primary {
        background: #007bff;
        color: white;
    }

    .badge-danger {
        background: #dc3545;
        color: white;
    }

    .badge-success {
        background: #28a745;
        color: white;
    }

    .badge-secondary {
        background: #6c757d;
        color: white;
    }

    .table th {
        font-weight: 700;
        color: #4a4a4a;
        border-top: 1px solid #e3e6f0;
        border-bottom: 2px solid #e3e6f0;
        padding: 12px 15px;
    }

    .table td {
        padding: 12px 15px;
        vertical-align: middle;
    }

    .card-header h4 {
        color: #222;
        font-weight: 700;
        margin: 0;
    }

    .page-link {
        color: #6c757d;
        border: 1px solid #dee2e6;
        padding: 8px 16px;
        font-weight: 600;
    }

    .page-item.active .page-link {
        background: #007bff;
        border-color: #007bff;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

    .btn-outline-primary:hover {
        background: #007bff;
        color: white;
    }

    .btn-outline-danger:hover {
        background: #dc3545;
        color: white;
    }
</style>