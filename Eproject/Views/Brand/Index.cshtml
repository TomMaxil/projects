@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @model List<Brand>
}



@if (@TempData["brand"] != null)
{
    <div class="alert alert-success" role="alert" id="Brand">
        @TempData["brand"]
    </div>
}
@if(@TempData["brands"] != null)
{
    <div class="alert alert-success" role="alert" id="Brands">
            @TempData["brands"]
    </div>
}
@if (@TempData["brandalert"] != null)
{
    <div class="alert alert-success" role="alert" id="Brandalert">
        @TempData["brandalert"]
    </div>
}
<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">ALL BRAND</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-md">
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Brand Image</th>
                                        <th>Action</th>
                                    </tr>
                                    <tbody>
                                        @{
                                            var count = 1;

                                            @foreach (var item in Model)
                                            {
                                                <tr style="font-style: oblique;">
                                                    <td>@count</td>
                                                    <td>@item.BrandName</td>
                                                    <td>
                                                        <img src="~/brand/@item.BrandImage" height="auto" width="100" />
                                                    </td>
                                                    <td>
                                                   <form method="post" asp-action="Delete" asp-route-id="@item.id" onclick="return confirm('Are you to you want to Delete this Brand')">
                                                   @Html.AntiForgeryToken()
                                                   <input type="hidden" name="id" value="@item.id" />

                                                   <button type="submit" class="btn btn-danger">Delete</button>
                                                   </form>
                                                  
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.id" class="btn btn-success">Edit</a>
                                                    </td>
                                                </tr>

                                                count++;
                                            }

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <nav class="d-inline-block">
                                <ul class="pagination mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">
                                            1 <span class="sr-only">(current)</span>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    var div = document.getElementById('Brand')
    setTimeout(()=>{
      div.style.display = "none";
    },5000)
</script>
<script>
    var div =document.getElementById('Brands')
    setTimeout(()=>{
        div.style.display = "none";
    },5000)
</script>
<script>
    var div = document.getElementById('Brandalert')
    setTimeout(()=>{
        div.style.display = "none";
    },10000)
</script>

