@model User

<style>
    .supermarket-login-page {
        background: linear-gradient(135deg, #f9f9f9 0%, #ffffff 100%);
        min-height: 100vh;
        padding: 40px 20px;
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    .login-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .login-hero {
        text-align: center;
        padding: 40px 0 50px;
        position: relative;
    }

        .login-hero::after {
            content: '';
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: #ff3c2f;
            border-radius: 2px;
        }

    .login-title {
        font-size: 42px;
        font-weight: 800;
        color: #222;
        margin: 0 0 15px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .login-subtitle {
        font-size: 18px;
        color: #666;
        max-width: 500px;
        margin: 0 auto;
        line-height: 1.5;
    }

    .login-grid {
        display: grid;
        grid-template-columns: 1fr 350px;
        gap: 40px;
        margin-bottom: 60px;
    }

    @@media (max-width: 992px) {
        .login-grid {
            grid-template-columns: 1fr;
            gap: 30px;
        }
    }

    .login-card {
        background: white;
        border-radius: 20px;
        padding: 50px 40px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 2px solid white;
        position: relative;
        overflow: hidden;
    }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

    .card-title {
        font-size: 32px;
        font-weight: 800;
        color: #222;
        margin: 0 0 30px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

        .card-title i {
            color: #ff3c2f;
            font-size: 28px;
        }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label {
        display: block;
        font-size: 15px;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        padding-left: 5px;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input {
        width: 100%;
        padding: 16px 20px 16px 50px;
        border: 2px solid #e8e8e8;
        border-radius: 12px;
        font-size: 16px;
        background: #fcfcfc;
        transition: all 0.3s ease;
    }

        .form-input:focus {
            border-color: #ff3c2f;
            background: white;
            outline: none;
            box-shadow: 0 0 0 4px rgba(255, 60, 47, 0.1);
        }

    .input-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #777;
        font-size: 18px;
        z-index: 2;
    }

    .form-input:focus + .input-icon {
        color: #ff3c2f;
    }

    .login-btn {
        width: 100%;
        padding: 18px;
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

        .login-btn:hover {
            background: linear-gradient(90deg, #222 0%, #333 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .forgot-password {
        text-align: center;
        margin-top: 20px;
    }

        .forgot-password a {
            color: #ff3c2f;
            text-decoration: none;
            font-size: 15px;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .forgot-password a:hover {
                color: #222;
                text-decoration: underline;
            }

    .error-message {
        color: #ff3c2f;
        font-size: 15px;
        font-weight: 600;
        text-align: center;
        margin-top: 15px;
        padding: 12px;
        background: rgba(255, 60, 47, 0.1);
        border-radius: 8px;
        border-left: 4px solid #ff3c2f;
    }

    .success-message {
        color: #0a8f45;
        font-size: 15px;
        font-weight: 600;
        text-align: center;
        margin-top: 15px;
        padding: 12px;
        background: rgba(10, 143, 69, 0.1);
        border-radius: 8px;
        border-left: 4px solid #0a8f45;
    }

    .register-sidebar {
        background: white;
        border-radius: 20px;
        padding: 40px 30px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 2px solid white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

        .register-sidebar::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #222, #444);
        }

    .sidebar-title {
        font-size: 26px;
        font-weight: 800;
        color: #222;
        margin: 0 0 20px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .sidebar-title i {
            color: #ff3c2f;
        }

    .sidebar-text {
        font-size: 16px;
        color: #666;
        line-height: 1.6;
        margin: 0 0 30px;
    }

    .benefits-list {
        list-style: none;
        padding: 0;
        margin: 0 0 30px;
    }

    .benefit-item {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 15px;
        font-size: 15px;
        color: #444;
        font-weight: 500;
    }

        .benefit-item i {
            color: #ff3c2f;
            font-size: 16px;
            width: 24px;
            height: 24px;
            background: rgba(255, 60, 47, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .register-redirect-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 16px;
        background: #222;
        color: white;
        text-decoration: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .register-redirect-btn:hover {
            background: #ff3c2f;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 60, 47, 0.3);
            color: white;
        }

    .trust-badges {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-top: 60px;
        padding-top: 40px;
        border-top: 2px solid #f0f0f0;
    }

    .trust-badge {
        text-align: center;
        padding: 20px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid #f0f0f0;
        transition: all 0.3s ease;
    }

        .trust-badge:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-color: #ff3c2f;
        }

        .trust-badge i {
            font-size: 32px;
            color: #ff3c2f;
            margin-bottom: 15px;
            display: block;
        }

        .trust-badge p {
            margin: 0;
            font-size: 14px;
            color: #333;
            font-weight: 600;
            line-height: 1.4;
        }

    @@media (max-width: 768px) {
        .supermarket-login-page {
            padding: 20px 15px;
        }

        .login-title {
            font-size: 32px;
        }

        .login-subtitle {
            font-size: 16px;
        }

        .login-card,
        .register-sidebar {
            padding: 30px 25px;
        }

        .card-title {
            font-size: 26px;
        }

        .trust-badges {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 576px) {
        .login-title {
            font-size: 28px;
        }

        .card-title {
            font-size: 22px;
        }

        .form-input {
            padding: 14px 16px 14px 45px;
            font-size: 15px;
        }

        .input-icon {
            left: 15px;
            font-size: 16px;
        }

        .trust-badges {
            grid-template-columns: 1fr;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="supermarket-login-page">
    <div class="login-container">
        <div class="login-hero">
            <h1 class="login-title">Welcome Back</h1>
            <p class="login-subtitle">Sign in to your account and continue shopping premium groceries</p>
        </div>

        @if (@ViewBag.success != null)
        {
            <div class="success-message">
                @ViewBag.success
            </div>
        }

        <div class="login-grid">
            <div class="login-card">
                <h2 class="card-title">
                    <i class="fas fa-sign-in-alt"></i>
                    <span>Sign In</span>
                </h2>

                <form asp-controller="User" asp-action="Login" method="post">
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <div class="input-wrapper">
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="email" name="Email" asp-for="Email" class="form-input" placeholder="Enter your email" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <div class="input-wrapper">
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" name="PasswordHash" asp-for="PasswordHash" class="form-input" placeholder="Enter your password" required />
                        </div>
                    </div>

                    @if (TempData["error"] != null)
                    {
                        <div class="error-message">
                            @TempData["error"]
                        </div>
                    }

                    <button type="submit" class="login-btn">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Sign In</span>
                    </button>

                    <div class="forgot-password">
                        <a href="#">
                            <i class="fas fa-key"></i>
                            <span>Forgot your password?</span>
                        </a>
                    </div>
                </form>
            </div>

            <div class="register-sidebar">
                <h3 class="sidebar-title">
                    <i class="fas fa-user-plus"></i>
                    <span>New Customer?</span>
                </h3>

                <p class="sidebar-text">Create an account to enjoy exclusive benefits and faster checkout experience.</p>

                <ul class="benefits-list">
                    <li class="benefit-item">
                        <i class="fas fa-bolt"></i>
                        <span>Faster checkout process</span>
                    </li>
                    <li class="benefit-item">
                        <i class="fas fa-history"></i>
                        <span>Track order history</span>
                    </li>
                    <li class="benefit-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Save delivery addresses</span>
                    </li>
                    <li class="benefit-item">
                        <i class="fas fa-star"></i>
                        <span>Write product reviews</span>
                    </li>
                    <li class="benefit-item">
                        <i class="fas fa-heart"></i>
                        <span>Create wishlists</span>
                    </li>
                </ul>

                <a asp-controller="User" asp-action="Register" class="register-redirect-btn">
                    <i class="fas fa-user-plus"></i>
                    <span>Create New Account</span>
                </a>
            </div>
        </div>

        <div class="trust-badges">
            <div class="trust-badge">
                <i class="fas fa-shield-alt"></i>
                <p>Secure Login<br>Encrypted Connection</p>
            </div>
            <div class="trust-badge">
                <i class="fas fa-shipping-fast"></i>
                <p>Free Delivery<br>On Orders ₹500+</p>
            </div>
            <div class="trust-badge">
                <i class="fas fa-undo"></i>
                <p>Easy Returns<br>7-Day Policy</p>
            </div>
            <div class="trust-badge">
                <i class="fas fa-headset"></i>
                <p>24/7 Support<br>Always Available</p>
            </div>
        </div>
    </div>
</div>