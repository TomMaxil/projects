@{
    Layout = "_Layout";
}

<style>
    .profile-container {
        background: linear-gradient(135deg, #f9f9f9 0%, #fff5f5 100%);
        min-height: 100vh;
        padding: 30px 15px;
        font-family: 'Poppins', sans-serif;
        display: flex;
        align-items: flex-start;
        justify-content: center;
    }

    .profile-wrapper {
        width: 100%;
        max-width: 500px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(255, 60, 47, 0.1);
        overflow: hidden;
        position: relative;
        border: 1px solid rgba(255, 60, 47, 0.1);
    }

    .profile-header {
        background: linear-gradient(135deg, #ff3c2f 0%, #ff6b6b 100%);
        padding: 30px 25px 20px;
        text-align: center;
        color: white;
        position: relative;
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        margin: 0 auto 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

        .profile-avatar i {
            font-size: 40px;
            color: #ff3c2f;
            background: linear-gradient(135deg, #fff5f5 0%, #ffeaea 100%);
            width: 74px;
            height: 74px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .profile-name {
        font-size: 24px;
        font-weight: 700;
        margin: 0 0 5px;
        color: white;
        line-height: 1.2;
    }

    .profile-role {
        font-size: 12px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        display: inline-block;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .profile-content {
        padding: 30px 25px;
    }

    .profile-info-title {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 20px;
        color: #222;
        display: flex;
        align-items: center;
        gap: 10px;
        padding-bottom: 10px;
        border-bottom: 2px solid #f0f0f0;
    }

        .profile-info-title i {
            color: #ff3c2f;
        }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 15px;
        margin-bottom: 25px;
    }

    .info-row {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 12px;
        background: #f9f9f9;
        border-radius: 12px;
        transition: all 0.2s ease;
        border: 1px solid #f0f0f0;
    }

        .info-row:hover {
            background: #fff5f5;
            border-color: #ffeaea;
            transform: translateX(3px);
        }

    .info-icon {
        width: 40px;
        height: 40px;
        min-width: 40px;
        background: linear-gradient(135deg, #fff5f5 0%, #ffeaea 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ff3c2f;
        font-size: 18px;
    }

    .info-content {
        flex: 1;
    }

    .info-label {
        font-size: 12px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
        margin-bottom: 3px;
    }

    .info-value {
        font-size: 14px;
        font-weight: 600;
        color: #222;
        word-break: break-word;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
        margin: 25px 0;
    }

    .stat-card {
        background: #f9f9f9;
        border-radius: 12px;
        padding: 15px;
        text-align: center;
        border: 1px solid #f0f0f0;
        transition: all 0.2s ease;
    }

        .stat-card:hover {
            background: #fff5f5;
            border-color: #ffeaea;
            transform: translateY(-3px);
        }

    .stat-number {
        font-size: 22px;
        font-weight: 800;
        color: #ff3c2f;
        display: block;
        line-height: 1;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 11px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    .membership-badge {
        background: linear-gradient(135deg, #111 0%, #222 100%);
        border-radius: 15px;
        padding: 20px;
        margin: 25px 0;
        color: white;
        position: relative;
        overflow: hidden;
    }

        .membership-badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

    .membership-title {
        font-size: 16px;
        font-weight: 700;
        margin-bottom: 15px;
        color: white;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .membership-title i {
            color: #ff3c2f;
        }

    .membership-features {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        font-size: 11px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .feature-icon {
        color: #ff3c2f;
        font-size: 12px;
    }

    .action-buttons {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
        margin: 25px 0 20px;
    }

    .action-btn {
        padding: 14px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 13px;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.2s ease;
        text-align: center;
        border: 2px solid transparent;
    }

    .btn-dashboard {
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
    }

        .btn-dashboard:hover {
            background: linear-gradient(90deg, #111 0%, #333 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .btn-secondary {
        background: white;
        color: #222;
        border-color: #ddd;
    }

        .btn-secondary:hover {
            background: #f9f9f9;
            border-color: #ff3c2f;
            color: #ff3c2f;
            transform: translateY(-2px);
        }

    .btn-logout {
        grid-column: span 2;
        background: #f9f9f9;
        color: #222;
        border-color: #ddd;
    }

        .btn-logout:hover {
            background: #ff3c2f;
            color: white;
            border-color: #ff3c2f;
            transform: translateY(-2px);
        }

    .session-info {
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
        margin-top: 20px;
    }

    .session-label {
        font-size: 12px;
        color: #666;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

        .session-label i {
            color: #4CAF50;
        }

    .session-time {
        font-size: 11px;
        color: #999;
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .profile-container {
            padding: 20px 10px;
        }

        .profile-wrapper {
            max-width: 400px;
        }

        .action-buttons {
            grid-template-columns: 1fr;
        }

        .btn-logout {
            grid-column: span 1;
        }
    }

    @@media (max-width: 576px) {
        .profile-wrapper {
            border-radius: 15px;
        }

        .profile-header {
            padding: 25px 20px 15px;
        }

        .profile-content {
            padding: 25px 20px;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

@if (Context.Session.GetString("Username") != null)
{
    <div class="profile-container">
        <div class="profile-wrapper">
            
            <div class="profile-header">
                <div class="profile-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>

                <h1 class="profile-name">@Context.Session.GetString("Username")</h1>

                <span class="profile-role">
                    <i class="fas fa-user-tag"></i> @Context.Session.GetString("Userrole")
                </span>
            </div>

            
            <div class="profile-content">
                
                <div class="profile-info-title">
                    <i class="fas fa-id-card"></i> Account Information
                </div>

                <div class="info-grid">
                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Email Address</div>
                            <div class="info-value">@Context.Session.GetString("Useremail")</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Phone Number</div>
                            <div class="info-value">@Context.Session.GetString("Userphone")</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-user-shield"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Account Type</div>
                            <div class="info-value">@Context.Session.GetString("Userrole")</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Status</div>
                            <div class="info-value" style="color: #4CAF50;">
                                <i class="fas fa-check-circle"></i> Active
                            </div>
                        </div>
                    </div>
                </div>

                
                <div class="stats-grid">
                    <div class="stat-card">
                        <span class="stat-number">12</span>
                        <span class="stat-label">Orders</span>
                    </div>
                    <div class="stat-card">
                        <span class="stat-number">4</span>
                        <span class="stat-label">Wishlist</span>
                    </div>
                </div>

                
                <div class="membership-badge">
                    <div class="membership-title">
                        <i class="fas fa-crown"></i> QUICKMART Member
                    </div>
                    <div class="membership-features">
                        <span class="feature-item">
                            <i class="fas fa-shipping-fast feature-icon"></i> Free Delivery
                        </span>
                        <span class="feature-item">
                            <i class="fas fa-percentage feature-icon"></i> Exclusive Deals
                        </span>
                        <span class="feature-item">
                            <i class="fas fa-gift feature-icon"></i> Birthday Rewards
                        </span>
                    </div>
                </div>

                
                <div class="action-buttons">
                    <a asp-controller="Customer" asp-action="Index" class="action-btn btn-dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>

                    <a href="#" class="action-btn btn-secondary">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>

                    <a asp-controller="User" asp-action="Logout" class="action-btn btn-logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>

               
                <div class="session-info">
                    <div class="session-label">
                        <i class="fas fa-check-circle"></i> Secure Session Active
                    </div>
                    <div class="session-time">
                        <i class="fas fa-shield-alt"></i> Protected by QUICKMART
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="profile-container">
        <div class="profile-wrapper" style="text-align: center; padding: 40px 25px;">
            <div style="font-size: 60px; color: #ff3c2f; margin-bottom: 20px;">
                <i class="fas fa-user-lock"></i>
            </div>
            <h2 style="color: #222; margin-bottom: 10px; font-size: 22px;">Session Expired</h2>
            <p style="color: #666; margin-bottom: 25px; font-size: 14px;">Please login to view your profile</p>
            <a asp-controller="User" asp-action="Login" class="action-btn btn-dashboard" style="max-width: 200px; margin: 0 auto;">
                <i class="fas fa-sign-in-alt"></i> Login Now
            </a>
        </div>
    </div>
}