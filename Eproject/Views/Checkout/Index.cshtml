@model List<CartItem>

@{
    Layout = "_Layout";
    var customer = ViewBag.Customer as Customer;
    decimal total = ViewBag.Total;
}

<style>
    .checkout-container {
        background: linear-gradient(135deg, #f9f9f9 0%, #fff5f5 100%);
        min-height: 100vh;
        padding: 50px 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .checkout-wrapper {
        max-width: 1400px;
        margin: 0 auto;
    }

    .checkout-header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

        .checkout-header h1 {
            font-size: 42px;
            font-weight: 800;
            background: linear-gradient(90deg, #ff3c2f 0%, #111 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
        }

        .checkout-header p {
            color: #666;
            font-size: 18px;
            max-width: 600px;
            margin: 0 auto 30px;
            line-height: 1.6;
        }

    .checkout-badge {
        display: inline-block;
        background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        color: white;
        padding: 8px 25px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 14px;
        letter-spacing: 0.5px;
        box-shadow: 0 5px 15px rgba(255, 60, 47, 0.2);
    }

    .checkout-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
        margin-bottom: 50px;
    }

    .cart-items-section {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
        position: relative;
        overflow: hidden;
    }

        .cart-items-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #111, #ff3c2f);
        }

    .section-title {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 30px;
        color: #222;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .section-title i {
            color: #ff3c2f;
        }

    .cart-items-list {
        margin-top: 20px;
    }

    .cart-item {
        display: flex;
        align-items: center;
        gap: 25px;
        padding: 25px;
        border-bottom: 2px solid #f5f5f5;
        transition: all 0.3s ease;
    }

        .cart-item:hover {
            background: #fff9f9;
            border-radius: 12px;
        }

    .product-image-container {
        width: 120px;
        height: 120px;
        border-radius: 12px;
        overflow: hidden;
        border: 3px solid #f0f0f0;
        background: white;
        flex-shrink: 0;
    }

        .product-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .product-details {
        flex: 1;
    }

    .product-name {
        font-size: 20px;
        font-weight: 700;
        color: #222;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .product-name i {
            color: #ff3c2f;
            font-size: 16px;
        }

    .product-info {
        display: flex;
        gap: 30px;
        margin-top: 15px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #666;
        font-size: 15px;
        font-weight: 500;
    }

        .info-item i {
            color: #ff3c2f;
        }

    .item-price {
        font-size: 22px;
        font-weight: 800;
        color: #222;
        min-width: 120px;
        text-align: right;
    }

        .item-price .currency {
            color: #ff3c2f;
            font-size: 18px;
            margin-right: 5px;
        }

    .order-summary-section {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
        position: relative;
        overflow: hidden;
        height: fit-content;
    }

        .order-summary-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #111, #ff3c2f, #111);
        }

    .shipping-form {
        margin-top: 30px;
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: #222;
        margin-bottom: 10px;
        display: block;
        font-size: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .form-label i {
            color: #ff3c2f;
            font-size: 14px;
        }

    .form-control {
        width: 100%;
        padding: 15px 20px;
        border: 2px solid #e8e8e8;
        border-radius: 12px;
        font-size: 15px;
        transition: all 0.3s ease;
        background: #fcfcfc;
    }

        .form-control:focus {
            border-color: #ff3c2f;
            outline: none;
            background: white;
            box-shadow: 0 5px 15px rgba(255, 60, 47, 0.1);
        }

    .payment-method {
        margin: 30px 0;
        background: #f9f9f9;
        border-radius: 12px;
        padding: 25px;
        border: 2px solid #e8e8e8;
    }

    .payment-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
    }

    .payment-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #fff5f5 0%, #ffeaea 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ff3c2f;
        font-size: 24px;
    }

    .payment-title {
        font-size: 18px;
        font-weight: 700;
        color: #222;
    }

    .card-details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-top: 20px;
    }

    .card-number-group {
        grid-column: span 2;
    }

    .total-summary {
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid #f0f0f0;
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .total-label {
        font-size: 16px;
        color: #666;
        font-weight: 500;
    }

    .total-value {
        font-size: 18px;
        font-weight: 600;
        color: #222;
    }

    .grand-total {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 2px solid #f0f0f0;
    }

        .grand-total .total-label {
            font-size: 20px;
            font-weight: 700;
            color: #222;
        }

        .grand-total .total-value {
            font-size: 28px;
            font-weight: 800;
            color: #ff3c2f;
        }

    .place-order-btn {
        width: 100%;
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        border: none;
        padding: 20px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 30px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

        .place-order-btn:hover {
            background: linear-gradient(90deg, #111 0%, #333 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

    .security-badge {
        background: linear-gradient(135deg, #111 0%, #222 100%);
        border-radius: 15px;
        padding: 25px;
        margin-top: 30px;
        color: white;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .security-badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

        .security-badge i {
            font-size: 40px;
            color: #ff3c2f;
            margin-bottom: 15px;
            display: block;
        }

        .security-badge p {
            font-size: 14px;
            color: #ddd;
            margin: 0;
        }

    .empty-cart {
        background: white;
        border-radius: 20px;
        padding: 80px 40px;
        text-align: center;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
    }

        .empty-cart i {
            font-size: 80px;
            color: #ff3c2f;
            margin-bottom: 30px;
            opacity: 0.7;
        }

        .empty-cart h3 {
            font-size: 32px;
            font-weight: 700;
            color: #222;
            margin-bottom: 15px;
        }

        .empty-cart p {
            font-size: 18px;
            color: #666;
            margin-bottom: 40px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }

    .btn-shopping {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        padding: 16px 35px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
    }

        .btn-shopping:hover {
            background: linear-gradient(90deg, #111 0%, #333 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            color: white;
        }

    @@media screen and (max-width: 1200px) {
        .checkout-grid {
            grid-template-columns: 1fr;
            gap: 25px;
        }

        .cart-item {
            flex-direction: column;
            text-align: center;
            gap: 20px;
        }

        .item-price {
            text-align: center;
            width: 100%;
        }
    }

    @@media screen and (max-width: 768px) {
        .checkout-header h1 {
            font-size: 32px;
        }

        .cart-items-section,
        .order-summary-section {
            padding: 30px 25px;
        }

        .product-image-container {
            width: 100px;
            height: 100px;
        }

        .product-name {
            font-size: 18px;
        }

        .card-details-grid {
            grid-template-columns: 1fr;
        }

        .card-number-group {
            grid-column: span 1;
        }
    }

    @@media screen and (max-width: 576px) {
        .checkout-header h1 {
            font-size: 28px;
        }

        .checkout-container {
            padding: 30px 15px;
        }

        .cart-items-section,
        .order-summary-section {
            padding: 25px 20px;
        }

        .product-info {
            flex-direction: column;
            gap: 10px;
        }

        .place-order-btn {
            padding: 18px;
            font-size: 15px;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="checkout-container">
    <div class="checkout-wrapper">

        <div class="checkout-header">
            <h1>Secure Checkout</h1>
            <p>Complete your purchase with secure credit card payment</p>
            <span class="checkout-badge">
                <i class="fas fa-shield-alt"></i> SSL ENCRYPTED
            </span>
        </div>

        @if (Model.Count == 0)
        {
            <div class="empty-cart">
                <i class="fas fa-shopping-cart"></i>
                <h3>Your Cart is Empty</h3>
                <p>Add some grocery items to your cart before proceeding to checkout</p>
                <a asp-controller="Customer" asp-action="Cart" class="btn-shopping">
                    <i class="fas fa-arrow-left"></i> Back to Cart
                </a>
            </div>
        }
        else
        {
            <div class="checkout-grid">

                <div class="cart-items-section">
                    <div class="section-title">
                        <i class="fas fa-shopping-basket"></i> Order Summary
                    </div>

                    <div class="cart-items-list">
                        @foreach (var item in Model)
                        {
                            <div class="cart-item">
                                <div class="product-image-container">
                                    <img src="~/images/@item.Product.image" alt="@item.Product.ProductName" />
                                </div>

                                <div class="product-details">
                                    <div class="product-name">
                                        <i class="fas fa-tag"></i> @item.Product.ProductName
                                    </div>

                                    <div class="product-info">
                                        <div class="info-item">
                                            <i class="fas fa-layer-group"></i>
                                            <span>Quantity: @item.Quantity</span>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-indian-rupee-sign"></i>
                                            <span>Unit Price: @item.Product.unitCost</span>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-box"></i>
                                            <span>In Stock</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="item-price">
                                    <span class="currency">₹</span>@(item.Quantity* item.Product.unitCost)
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="order-summary-section">
                    <form method="post" asp-action="PlaceOrder">
                        @Html.AntiForgeryToken()

                        <div class="section-title">
                            <i class="fas fa-map-marker-alt"></i> Shipping Details
                        </div>

                        <div class="shipping-form">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-road"></i> Street Address
                                </label>
                                <input type="text" name="Street" class="form-control" value="@customer.Street" required />
                            </div>

                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                                <div class="form-group">
                                    <label class="form-label">
                                        <i class="fas fa-city"></i> City
                                    </label>
                                    <input type="text" name="City" class="form-control" value="@customer.City" required />
                                </div>

                                <div class="form-group">
                                    <label class="form-label">
                                        <i class="fas fa-landmark"></i> State
                                    </label>
                                    <input type="text" name="State" class="form-control" value="@customer.State" required />
                                </div>
                            </div>

                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                                <div class="form-group">
                                    <label class="form-label">
                                        <i class="fas fa-globe"></i> Country
                                    </label>
                                    <input type="text" name="Country" class="form-control" value="@customer.Country" required />
                                </div>

                                <div class="form-group">
                                    <label class="form-label">
                                        <i class="fas fa-phone"></i> Mobile Number
                                    </label>
                                    <input type="text" name="Mobile" class="form-control" value="@customer.Mobile" required />
                                </div>
                            </div>
                        </div>

                        <div class="payment-method">
                            <div class="payment-header">
                                <div class="payment-icon">
                                    <i class="fas fa-credit-card"></i>
                                </div>
                                <div class="payment-title">Credit/Debit Card Payment</div>
                            </div>

                            <input type="hidden" name="PaymentMethod" value="Card" />

                            <div class="card-details-grid">
                                <div class="form-group card-number-group">
                                    <label class="form-label">
                                        <i class="fas fa-credit-card"></i> Card Number
                                    </label>
                                    <input type="text" name="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" required maxlength="19" />
                                </div>

                                <div class="form-group">
                                    <label class="form-label">
                                        <i class="fas fa-calendar-alt"></i> Expiry Date
                                    </label>
                                    <input type="text" name="CardExpiry" class="form-control" placeholder="MM/YY" required maxlength="5" />
                                </div>


                            </div>
                        </div>

                        <div class="total-summary">
                            <div class="total-row">
                                <span class="total-label">Subtotal</span>
                                <span class="total-value">₹@total</span>
                            </div>

                            <div class="total-row">
                                <span class="total-label">Delivery Charges</span>
                                <span class="total-value">FREE</span>
                            </div>

                            <div class="total-row">
                                <span class="total-label">Tax (GST)</span>
                                <span class="total-value">₹0.00</span>
                            </div>

                            <div class="grand-total">
                                <div class="total-row">
                                    <span class="total-label">Total Amount</span>
                                    <span class="total-value">₹@total</span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="place-order-btn">
                            <i class="fas fa-lock"></i> Pay & Place Order
                        </button>
                    </form>

                    <div class="security-badge">
                        <i class="fas fa-shield-check"></i>
                        <p>Your payment information is encrypted and secure. We do not store card details.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>