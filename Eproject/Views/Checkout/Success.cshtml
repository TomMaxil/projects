@{
    Layout = "_Layout";
    var id = ViewBag.OrderId;
}

<style>
    .order-success-container {
        background: linear-gradient(135deg, #f9f9f9 0%, #fff5f5 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 50px 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .success-card {
        background: white;
        border-radius: 25px;
        padding: 60px 50px;
        box-shadow: 0 25px 60px rgba(255, 60, 47, 0.15);
        max-width: 800px;
        width: 100%;
        text-align: center;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255, 60, 47, 0.1);
    }

        .success-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 8px;
            background: linear-gradient(90deg, #ff3c2f, #111, #ff3c2f);
        }

    .success-icon {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 35px;
        position: relative;
        box-shadow: 0 15px 35px rgba(76, 175, 80, 0.25);
    }

        .success-icon i {
            font-size: 60px;
            color: white;
            text-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        }

        .success-icon::after {
            content: '';
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            border: 3px solid rgba(76, 175, 80, 0.2);
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

    @@keyframes pulse {
        0% {
            transform: scale(0.95);
            opacity: 0.7;
        }

        50% {
            transform: scale(1.05);
            opacity: 0.3;
        }

        100% {
            transform: scale(0.95);
            opacity: 0.7;
        }
    }

    .success-title {
        font-size: 48px;
        font-weight: 800;
        color: #222;
        margin-bottom: 15px;
        line-height: 1.2;
        background: linear-gradient(90deg, #4CAF50 0%, #2E7D32 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .success-subtitle {
        font-size: 20px;
        color: #666;
        margin-bottom: 40px;
        line-height: 1.6;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .order-id-section {
        background: linear-gradient(135deg, #f9f9f9 0%, #f0f0f0 100%);
        border-radius: 15px;
        padding: 30px;
        margin: 40px 0;
        border: 2px solid #e8e8e8;
        position: relative;
        overflow: hidden;
    }

        .order-id-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

    .order-id-label {
        font-size: 18px;
        font-weight: 600;
        color: #555;
        margin-bottom: 15px;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .order-id-label i {
            color: #ff3c2f;
        }

    .order-id-value {
        font-size: 52px;
        font-weight: 800;
        color: #ff3c2f;
        font-family: 'Courier New', monospace;
        letter-spacing: 2px;
        text-shadow: 0 2px 10px rgba(255, 60, 47, 0.2);
        background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .order-id-note {
        font-size: 14px;
        color: #777;
        margin-top: 15px;
        font-style: italic;
    }

    .success-message {
        background: linear-gradient(135deg, #111 0%, #222 100%);
        border-radius: 20px;
        padding: 35px;
        margin: 40px 0;
        color: white;
        position: relative;
        overflow: hidden;
    }

        .success-message::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

        .success-message h4 {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 15px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

            .success-message h4 i {
                color: #ff3c2f;
            }

        .success-message p {
            font-size: 16px;
            color: #ddd;
            line-height: 1.6;
            margin: 0;
        }

    .next-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin: 40px 0;
    }

    .step-item {
        background: white;
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        border: 2px solid #f0f0f0;
        transition: all 0.3s ease;
    }

        .step-item:hover {
            transform: translateY(-5px);
            border-color: #ff3c2f;
            box-shadow: 0 10px 25px rgba(255, 60, 47, 0.1);
        }

    .step-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #fff5f5 0%, #ffeaea 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        color: #ff3c2f;
        font-size: 24px;
    }

    .step-title {
        font-size: 16px;
        font-weight: 700;
        color: #222;
        margin-bottom: 8px;
    }

    .step-description {
        font-size: 14px;
        color: #666;
        line-height: 1.5;
    }

    .action-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 50px;
        flex-wrap: wrap;
    }

    .btn-primary-action {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        padding: 18px 40px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 16px;
        transition: all 0.3s ease;
        border: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        min-width: 250px;
        justify-content: center;
    }

        .btn-primary-action:hover {
            background: linear-gradient(90deg, #111 0%, #333 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            color: white;
            text-decoration: none;
        }

    .btn-secondary-action {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: white;
        color: #222;
        padding: 18px 40px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 16px;
        transition: all 0.3s ease;
        border: 2px solid #ddd;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        min-width: 250px;
        justify-content: center;
    }

        .btn-secondary-action:hover {
            background: #f9f9f9;
            border-color: #ff3c2f;
            color: #ff3c2f;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            text-decoration: none;
        }

    .store-info {
        margin-top: 50px;
        padding-top: 40px;
        border-top: 2px solid #f0f0f0;
        text-align: center;
    }

        .store-info p {
            color: #666;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .store-info i {
            color: #ff3c2f;
            margin-right: 8px;
        }

    @@media screen and (max-width: 768px) {
        .success-card {
            padding: 40px 30px;
        }

        .success-title {
            font-size: 36px;
        }

        .success-subtitle {
            font-size: 18px;
        }

        .order-id-value {
            font-size: 42px;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-primary-action,
        .btn-secondary-action {
            width: 100%;
            min-width: auto;
        }
    }

    @@media screen and (max-width: 576px) {
        .success-title {
            font-size: 32px;
        }

        .order-id-value {
            font-size: 36px;
        }

        .next-steps {
            grid-template-columns: 1fr;
        }

        .success-card {
            padding: 35px 25px;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="order-success-container">
    <div class="success-card">

        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>

        <h1 class="success-title">Order Successful!</h1>

        <p class="success-subtitle">
            Thank you for your purchase! Your grocery order has been confirmed and is being processed.
        </p>

        <div class="order-id-section">
            <div class="order-id-label">
                <i class="fas fa-receipt"></i> Your Order ID
            </div>
            <div class="order-id-value">#@id</div>
            <div class="order-id-note">Keep this ID for tracking and reference</div>
        </div>

        <div class="success-message">
            <h4><i class="fas fa-shipping-fast"></i> What Happens Next?</h4>
            <p>
                Your order will be packed and delivered within 30 minutes. You'll receive a confirmation email
                with tracking details shortly. Our delivery executive will contact you before arrival.
            </p>
        </div>

        <div class="next-steps">
            <div class="step-item">
                <div class="step-icon">
                    <i class="fas fa-box-open"></i>
                </div>
                <div class="step-title">Order Processing</div>
                <div class="step-description">We're preparing your grocery items with care</div>
            </div>

            <div class="step-item">
                <div class="step-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <div class="step-title">Fast Delivery</div>
                <div class="step-description">30-minute delivery to your doorstep</div>
            </div>

            <div class="step-item">
                <div class="step-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <div class="step-title">Support Available</div>
                <div class="step-description">24/7 customer support for any queries</div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-controller="Home" asp-action="Index" class="btn-primary-action">
                <i class="fas fa-store"></i> Continue Shopping
            </a>

            <a asp-controller="Customer" asp-action="MyOrders" class="btn-secondary-action">
                <i class="fas fa-clipboard-list"></i> View My Orders
            </a>
        </div>

        <div class="store-info">
            <p><i class="fas fa-clock"></i> Delivery Hours: 7 Days • 6AM - 11PM</p>
            <p><i class="fas fa-phone"></i> Need Help? Call: (800) QUK-MART</p>
            <p><i class="fas fa-envelope"></i> Email: support@supermart.com</p>
        </div>

    </div>
</div>