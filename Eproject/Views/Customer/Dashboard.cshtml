@{
    Layout = "_Layout";
}

<style>
    
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800;900&display=swap');

   
    .dash-container {
        background: linear-gradient(135deg, #f9f9f9 0%, #fff5f5 100%);
        min-height: 100vh;
        padding: 30px 0;
        font-family: 'Poppins', sans-serif;
    }

   
    .dash-hero {
        background: linear-gradient(135deg, #ff3c2f 0%, #ff6b6b 100%);
        padding: 40px;
        border-radius: 20px;
        color: white;
        margin-bottom: 40px;
        box-shadow: 0 15px 35px rgba(255, 60, 47, 0.2);
        position: relative;
        overflow: hidden;
    }

        .dash-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #111, #ff3c2f);
        }

        .dash-hero h2 {
            font-size: 36px;
            font-weight: 800;
            margin: 0;
            font-family: 'Montserrat', sans-serif;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .dash-hero p {
            margin-top: 12px;
            font-size: 16px;
            opacity: 0.9;
            max-width: 600px;
            line-height: 1.6;
        }

    .welcome-badge {
        display: inline-block;
        background: rgba(255, 255, 255, 0.2);
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        margin-top: 15px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    
    .dash-card {
        background: white;
        padding: 30px 25px;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        text-align: center;
        margin-bottom: 30px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: 1px solid #f0f0f0;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .dash-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

        .dash-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(255, 60, 47, 0.15);
        }

        .dash-card i {
            font-size: 48px;
            margin-bottom: 20px;
            color: #ff3c2f;
            background: linear-gradient(135deg, #fff5f5 0%, #ffeaea 100%);
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .dash-card h4 {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 10px;
            color: #222;
        }

        .dash-card p {
            font-size: 14px;
            color: #666;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .dash-card a {
            padding: 12px 25px;
            background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
            color: white;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
            border: none;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .dash-card a:hover {
                background: linear-gradient(90deg, #111 0%, #333 100%);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                color: white;
            }

   
    .section-title {
        font-size: 28px;
        font-weight: 800;
        margin: 50px 0 30px;
        color: #222;
        position: relative;
        padding-bottom: 15px;
        font-family: 'Montserrat', sans-serif;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
            border-radius: 2px;
        }

    
    .promo-container {
        margin-bottom: 40px;
    }

    .promo-box {
        background: white;
        padding: 25px 20px;
        border-radius: 16px;
        text-align: center;
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 25px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: 2px solid transparent;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

        .promo-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

        .promo-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(255, 60, 47, 0.15);
            border-color: #ffeaea;
        }

    .promo-icon {
        font-size: 40px;
        margin-bottom: 10px;
    }

    .promo-box:nth-child(1) .promo-icon {
        color: #ff3c2f;
    }

    .promo-box:nth-child(2) .promo-icon {
        color: #4CAF50;
    }

    .promo-box:nth-child(3) .promo-icon {
        color: #2196F3;
    }

    .promo-label {
        font-size: 14px;
        color: #666;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    
    .quick-stats {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 40px;
        border: 1px solid #f0f0f0;
    }

    .stats-title {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 20px;
        color: #222;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .stats-title i {
            color: #ff3c2f;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
    }

    .stat-item {
        text-align: center;
        padding: 15px;
        background: #f9f9f9;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .stat-item:hover {
            background: #fff5f5;
            transform: translateY(-3px);
        }

    .stat-value {
        font-size: 24px;
        font-weight: 800;
        color: #ff3c2f;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 14px;
        color: #666;
        font-weight: 500;
    }

   
    .logout-section {
        text-align: center;
        margin: 50px 0;
        padding-top: 30px;
        border-top: 2px solid #f0f0f0;
    }

    .btn-logout {
        background: linear-gradient(90deg, #111 0%, #333 100%);
        color: white;
        border: none;
        padding: 15px 35px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 16px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-logout:hover {
            background: linear-gradient(90deg, #ff3c2f 0%, #e0352b 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(255, 60, 47, 0.2);
            color: white;
        }

    
    .recent-activity {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 40px;
        border: 1px solid #f0f0f0;
    }

    .activity-title {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 25px;
        color: #222;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .activity-title i {
            color: #ff3c2f;
        }

    .activity-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .activity-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .activity-item:last-child {
            border-bottom: none;
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        background: #fff5f5;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ff3c2f;
        font-size: 18px;
    }

    .activity-text {
        flex: 1;
    }

        .activity-text strong {
            color: #222;
            font-weight: 600;
        }

    .activity-time {
        color: #999;
        font-size: 12px;
    }

  
    @@media (max-width: 768px) {
        .dash-hero {
            padding: 30px 20px;
        }

            .dash-hero h2 {
                font-size: 28px;
            }

        .section-title {
            font-size: 24px;
        }

        .dash-card {
            padding: 25px 20px;
        }

        .promo-box {
            padding: 20px 15px;
        }
    }

    @@media (max-width: 576px) {
        .dash-hero h2 {
            font-size: 24px;
        }

        .dash-card i {
            width: 60px;
            height: 60px;
            font-size: 36px;
        }

        .btn-logout {
            padding: 12px 25px;
            font-size: 14px;
        }
    }
</style>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="dash-container">
    <div class="container">

        
        <div class="dash-hero">
            <h2>
                <i class="fas fa-shopping-cart"></i>
                Welcome back, <span style="color: #111;">@Context.Session.GetString("Username")</span>!
            </h2>
            <p>Your one-stop solution for all grocery needs. Continue shopping, track orders, and manage your account effortlessly.</p>
            <div class="welcome-badge">
                <i class="fas fa-bolt"></i> SUPERMART Customer Dashboard
            </div>
        </div>

       
        <div class="quick-stats">
            <div class="stats-title">
                <i class="fas fa-chart-line"></i> Your Shopping Overview
            </div>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Active Orders</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Cart Items</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">0</div>
                    <div class="stat-label">Wishlist Items</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">₹0</div>
                    <div class="stat-label">Total Spent</div>
                </div>
            </div>
        </div>

      
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="dash-card">
                    <i class="fas fa-box-open"></i>
                    <h4>My Orders</h4>
                    <p>Track, view, and manage all your past and current grocery orders</p>
                    <a asp-controller="Customer" asp-action="MyOrders" >
                        <i class="fas fa-external-link-alt"></i> View Orders
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="dash-card">
                    <i class="fas fa-shopping-cart"></i>
                    <h4>My Cart</h4>
                    <p>Review and checkout items in your shopping cart</p>
                    <a asp-controller="Customer" asp-action="Cart">
                        <i class="fas fa-shopping-bag"></i> Go to Cart
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="dash-card">
                    <i class="fas fa-user-circle"></i>
                    <h4>My Profile</h4>
                    <p>Update personal information, addresses, and preferences</p>
                    <a asp-controller="User" asp-action="Index">
                        <i class="fas fa-user-edit"></i> Manage Profile
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="dash-card">
                    <i class="fas fa-heart"></i>
                    <h4>Wishlist</h4>
                    <p>Save your favorite products for later purchase</p>
                    <a href="#">
                        <i class="fas fa-star"></i> View Wishlist
                    </a>
                </div>
            </div>
        </div>

        
        <h3 class="section-title">Continue Shopping</h3>

        <div class="promo-container">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="promo-box">
                        <div class="promo-icon">
                            <i class="fas fa-fire"></i>
                        </div>
                        <div class="promo-label">Limited Time Offer</div>
                        <div>🔥 Today's Hot Deals</div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="promo-box">
                        <div class="promo-icon">
                            <i class="fas fa-wine-bottle"></i>
                        </div>
                        <div class="promo-label">Fresh & Healthy</div>
                        <div>🥛 Dairy & Milk Products</div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="promo-box">
                        <div class="promo-icon">
                            <i class="fas fa-cookie-bite"></i>
                        </div>
                        <div class="promo-label">Snack Time</div>
                        <div>🍪 Snacks & Biscuits</div>
                    </div>
                </div>
            </div>
        </div>

       
        <div class="recent-activity">
            <div class="activity-title">
                <i class="fas fa-history"></i> Recent Activity
            </div>
            <ul class="activity-list">
                <li class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-sign-in-alt"></i>
                    </div>
                    <div class="activity-text">
                        <strong>Logged in</strong> to your account
                    </div>
                    <div class="activity-time">Just now</div>
                </li>
                <li class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <div class="activity-text">
                        Profile information <strong>updated successfully</strong>
                    </div>
                    <div class="activity-time">2 days ago</div>
                </li>
                <li class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <div class="activity-text">
                        <strong>Order #ORD78945</strong> delivered successfully
                    </div>
                    <div class="activity-time">1 week ago</div>
                </li>
            </ul>
        </div>

       
        <div class="logout-section">
            <a asp-controller="User" asp-action="Logout" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
            <p style="margin-top: 15px; color: #666; font-size: 14px;">
                Secure session • <i class="fas fa-shield-alt"></i> Protected
            </p>
        </div>

    </div>
</div>