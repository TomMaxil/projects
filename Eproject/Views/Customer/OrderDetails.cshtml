@model List<OrderItem>

@{
    Layout = "_Layout";
    var order = ViewBag.Order as Order;
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800;900&display=swap');

    .order-details-container {
        background: linear-gradient(135deg, #f9f9f9 0%, #fff5f5 100%);
        min-height: 100vh;
        padding: 40px 20px;
        font-family: 'Poppins', sans-serif;
        margin-bottom: 40px;
    }

    .order-details-content {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

        .page-header h1 {
            font-size: 42px;
            font-weight: 800;
            background: linear-gradient(90deg, #ff3c2f 0%, #111 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
            font-family: 'Montserrat', sans-serif;
        }

        .page-header p {
            color: #666;
            font-size: 18px;
            max-width: 600px;
            margin: 0 auto 30px;
            line-height: 1.6;
        }

    .order-badge {
        display: inline-block;
        background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        color: white;
        padding: 8px 25px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 14px;
        letter-spacing: 0.5px;
        box-shadow: 0 5px 15px rgba(255, 60, 47, 0.2);
    }

    .order-summary-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 40px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
        position: relative;
        overflow: hidden;
    }

        .order-summary-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #111, #ff3c2f);
        }

    .order-summary-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 20px;
    }

    .order-id-display {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .order-id-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #fff5f5 0%, #ffeaea 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ff3c2f;
        font-size: 24px;
    }

    .order-id-text h3 {
        font-size: 24px;
        font-weight: 700;
        margin: 0 0 5px 0;
        color: #222;
    }

    .order-id-text p {
        font-size: 14px;
        color: #666;
        margin: 0;
    }

    .status-display {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 25px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 16px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-delivered {
        background: rgba(76, 175, 80, 0.1);
        color: #4CAF50;
        border: 2px solid rgba(76, 175, 80, 0.2);
    }

    .status-pending {
        background: rgba(255, 193, 7, 0.1);
        color: #FFC107;
        border: 2px solid rgba(255, 193, 7, 0.2);
    }

    .status-processing {
        background: rgba(33, 150, 243, 0.1);
        color: #2196F3;
        border: 2px solid rgba(33, 150, 243, 0.2);
    }

    .status-cancelled {
        background: rgba(244, 67, 54, 0.1);
        color: #F44336;
        border: 2px solid rgba(244, 67, 54, 0.2);
    }

    .order-details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .detail-label {
        font-size: 14px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .detail-label i {
            color: #ff3c2f;
            font-size: 16px;
        }

    .detail-value {
        font-size: 18px;
        font-weight: 700;
        color: #222;
    }

    .order-items-section {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
        margin-bottom: 40px;
    }

    .section-header {
        background: linear-gradient(90deg, #111 0%, #222 100%);
        padding: 25px 30px;
        color: white;
    }

        .section-header h3 {
            font-size: 22px;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .section-header h3 i {
                color: #ff3c2f;
            }

    .items-count {
        background: #ff3c2f;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        margin-left: 15px;
    }

    .items-table {
        width: 100%;
        border-collapse: collapse;
    }

        .items-table thead {
            background: #f9f9f9;
            border-bottom: 2px solid #f0f0f0;
        }

        .items-table th {
            padding: 20px 25px;
            text-align: left;
            font-weight: 700;
            color: #222;
            font-size: 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 3px solid #ff3c2f;
        }

        .items-table tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
        }

            .items-table tbody tr:hover {
                background: #fff9f9;
            }

        .items-table td {
            padding: 25px;
            color: #444;
            font-weight: 500;
            vertical-align: middle;
        }

    .product-cell {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .product-image {
        width: 100px;
        height: 100px;
        border-radius: 12px;
        overflow: hidden;
        border: 2px solid #f0f0f0;
        background: white;
        flex-shrink: 0;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-image:hover img {
            transform: scale(1.05);
        }

    .product-info {
        flex: 1;
    }

    .product-name {
        font-size: 18px;
        font-weight: 700;
        color: #222;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .product-name i {
            color: #ff3c2f;
            font-size: 16px;
        }

    .product-category {
        font-size: 14px;
        color: #666;
        background: #f5f5f5;
        padding: 4px 12px;
        border-radius: 6px;
        display: inline-block;
    }

    .quantity-cell {
        text-align: center;
    }

    .quantity-display {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: #f9f9f9;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 700;
        color: #222;
    }

        .quantity-display i {
            color: #ff3c2f;
        }

    .price-cell {
        text-align: center;
    }

    .price-display {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .unit-price {
        font-size: 16px;
        color: #666;
    }

    .total-price {
        font-size: 20px;
        font-weight: 800;
        color: #222;
    }

    .currency {
        color: #ff3c2f;
        font-size: 18px;
        margin-right: 5px;
    }

    .order-totals-section {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
        margin-bottom: 40px;
    }

    .totals-header {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 30px;
        color: #222;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .totals-header i {
            color: #ff3c2f;
        }

    .totals-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 30px;
        margin-bottom: 30px;
    }

    .total-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 12px;
        border: 1px solid #f0f0f0;
    }

    .total-label {
        font-size: 16px;
        color: #666;
        font-weight: 600;
    }

    .total-value {
        font-size: 20px;
        font-weight: 700;
        color: #222;
    }

    .grand-total {
        background: linear-gradient(90deg, #111 0%, #222 100%);
        color: white;
        border: none;
        padding: 25px 30px;
    }

        .grand-total .total-label {
            color: white;
            font-size: 18px;
        }

        .grand-total .total-value {
            color: white;
            font-size: 28px;
        }

        .grand-total .currency {
            color: #ff6b6b;
        }

    .action-buttons {
        display: flex;
        gap: 20px;
        margin-top: 50px;
        flex-wrap: wrap;
    }

    .btn-primary-action {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        padding: 16px 35px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        border: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        flex: 1;
        min-width: 200px;
        justify-content: center;
    }

        .btn-primary-action:hover {
            background: linear-gradient(90deg, #111 0%, #333 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            color: white;
        }

    .btn-secondary-action {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: white;
        color: #222;
        padding: 16px 35px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        border: 2px solid #ddd;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        flex: 1;
        min-width: 200px;
        justify-content: center;
    }

        .btn-secondary-action:hover {
            background: #f9f9f9;
            border-color: #ff3c2f;
            color: #ff3c2f;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .delivery-info {
        background: linear-gradient(135deg, #111 0%, #222 100%);
        border-radius: 20px;
        padding: 40px;
        margin-top: 40px;
        color: white;
        position: relative;
        overflow: hidden;
    }

        .delivery-info::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

    .delivery-header {
        font-size: 22px;
        font-weight: 700;
        margin-bottom: 25px;
        color: white;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .delivery-header i {
            color: #ff3c2f;
        }

    .delivery-steps {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 30px 0;
        position: relative;
    }

        .delivery-steps::before {
            content: '';
            position: absolute;
            top: 25px;
            left: 10%;
            right: 10%;
            height: 3px;
            background: rgba(255, 255, 255, 0.2);
            z-index: 1;
        }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        position: relative;
        z-index: 2;
        flex: 1;
    }

    .step-icon {
        width: 50px;
        height: 50px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        border: 3px solid rgba(255, 255, 255, 0.3);
    }

    .step.active .step-icon {
        background: #ff3c2f;
        border-color: #ff6b6b;
    }

    .step-text {
        font-size: 14px;
        text-align: center;
        color: #ddd;
    }

    .step.active .step-text {
        color: white;
        font-weight: 600;
    }

    @@media (max-width: 992px) {
        .items-table {
            display: block;
            overflow-x: auto;
        }

            .items-table th,
            .items-table td {
                padding: 15px;
            }

        .delivery-steps {
            flex-wrap: wrap;
            gap: 20px;
        }

            .delivery-steps::before {
                display: none;
            }
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 32px;
        }

        .order-summary-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .order-summary-card {
            padding: 30px 25px;
        }

        .product-cell {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .product-image {
            width: 80px;
            height: 80px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-primary-action,
        .btn-secondary-action {
            width: 100%;
        }
    }

    @@media (max-width: 576px) {
        .page-header h1 {
            font-size: 28px;
        }

        .order-details-grid {
            grid-template-columns: 1fr;
        }

        .totals-grid {
            grid-template-columns: 1fr;
        }

        .items-table td {
            padding: 15px 10px;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="order-details-container">
    <div class="order-details-content">

        <div class="page-header">
            <h1>Order Details</h1>
            <p>View complete information about your grocery order</p>
            <span class="order-badge">
                <i class="fas fa-file-invoice"></i> ORDER INVOICE
            </span>
        </div>

        @{
            var statusClass = "status-pending";
            if (order.PaymentStatus == "Delivered") statusClass = "status-delivered";
            else if (order.PaymentStatus == "Processing") statusClass = "status-processing";
            else if (order.PaymentStatus == "Cancelled") statusClass = "status-cancelled";
        }

        <div class="order-summary-card">
            <div class="order-summary-header">
                <div class="order-id-display">
                    <div class="order-id-icon">
                        <i class="fas fa-receipt"></i>
                    </div>
                    <div class="order-id-text">
                        <h3>Order #@order.OrderId</h3>
                        <p>QUICKMART Grocery Order</p>
                    </div>
                </div>

                <span class="status-display @statusClass">
                    <i class="fas fa-circle"></i> @order.PaymentStatus
                </span>
            </div>

            <div class="order-details-grid">
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-calendar-alt"></i> Order Date
                    </div>
                    <div class="detail-value">@order.DateOfPurchase.ToString("dd MMMM, yyyy")</div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-clock"></i> Order Time
                    </div>
                    <div class="detail-value">@order.DateOfPurchase.ToString("hh:mm tt")</div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-boxes"></i> Total Items
                    </div>
                    <div class="detail-value">@Model.Sum(item => item.Quantity) Items</div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-store"></i> Store
                    </div>
                    <div class="detail-value">QUICKMART Supermarket</div>
                </div>
            </div>
        </div>

        <div class="order-items-section">
            <div class="section-header">
                <h3>
                    <i class="fas fa-shopping-basket"></i> Order Items
                    <span class="items-count">@Model.Count Items</span>
                </h3>
            </div>

            <div class="table-responsive">
                <table class="items-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="product-cell">
                                        <div class="product-image">
                                            <img src="~/images/@item.Product.image" alt="@item.Product.ProductName" />
                                        </div>
                                        <div class="product-info">
                                            <div class="product-name">
                                                <i class="fas fa-tag"></i> @item.Product.ProductName
                                            </div>
                                            <span class="product-category">Grocery Item</span>
                                        </div>
                                    </div>
                                </td>

                                <td class="quantity-cell">
                                    <div class="quantity-display">
                                        <i class="fas fa-layer-group"></i> @item.Quantity
                                    </div>
                                </td>

                                <td class="price-cell">
                                    <div class="price-display">
                                        <span class="unit-price">Unit Price</span>
                                        <div>
                                            <span class="currency">₹</span>@item.UnitCost
                                        </div>
                                    </div>
                                </td>

                                <td class="price-cell">
                                    <div class="price-display">
                                        <span class="unit-price">Item Total</span>
                                        <div class="total-price">
                                            <span class="currency">₹</span>@item.Total
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="order-totals-section">
            <div class="totals-header">
                <i class="fas fa-calculator"></i> Order Summary
            </div>

            <div class="totals-grid">
                <div class="total-item">
                    <span class="total-label">Subtotal</span>
                    <span class="total-value">
                        <span class="currency">₹</span>@Model.Sum(item => item.Total)
                    </span>
                </div>

                <div class="total-item">
                    <span class="total-label">Delivery Fee</span>
                    <span class="total-value">
                        <span class="currency">₹</span>0
                    </span>
                </div>

                <div class="total-item">
                    <span class="total-label">Tax (GST)</span>
                    <span class="total-value">
                        <span class="currency">₹</span>0
                    </span>
                </div>
            </div>

            <div class="total-item grand-total">
                <span class="total-label">Grand Total</span>
                <span class="total-value">
                    <span class="currency">₹</span>@order.TotalAmount
                </span>
            </div>
        </div>

        @if (order.PaymentStatus != "Delivered" && order.PaymentStatus != "Cancelled")
        {
            <div class="delivery-info">
                <div class="delivery-header">
                    <i class="fas fa-truck"></i> Delivery Status
                </div>

                <div class="delivery-steps">
                    <div class="step @(order.PaymentStatus == "Processing" ? "active" : "")">
                        <div class="step-icon">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="step-text">Order Confirmed</div>
                    </div>

                    <div class="step @(order.PaymentStatus == "Processing" ? "active" : "")">
                        <div class="step-icon">
                            <i class="fas fa-box"></i>
                        </div>
                        <div class="step-text">Packing</div>
                    </div>

                    <div class="step">
                        <div class="step-icon">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="step-text">On the Way</div>
                    </div>

                    <div class="step">
                        <div class="step-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="step-text">Delivered</div>
                    </div>
                </div>

                <p style="color: #ddd; font-size: 14px; text-align: center; margin-top: 20px;">
                    <i class="fas fa-info-circle"></i> Your order will be delivered within 30 minutes
                </p>
            </div>
        }

        <div class="action-buttons">
            <a asp-controller="Customer" asp-action="MyOrders" class="btn-secondary-action">
                <i class="fas fa-arrow-left"></i> Back to Orders
            </a>

            <a href="#" class="btn-primary-action">
                <i class="fas fa-print"></i> Print Invoice
            </a>

            @if (order.PaymentStatus != "Delivered" && order.PaymentStatus != "Cancelled")
            {
                <a href="#" class="btn-primary-action">
                    <i class="fas fa-headset"></i> Contact Support
                </a>
            }
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const statusElement = document.querySelector('.status-display');
        const statusText = statusElement.textContent.toLowerCase().trim();

        const statusIcons = document.querySelectorAll('.step-icon i');
        if (statusText.includes('delivered')) {
            statusIcons.forEach(icon => icon.parentElement.parentElement.classList.add('active'));
        } else if (statusText.includes('processing')) {
            statusIcons[0].parentElement.parentElement.classList.add('active');
            statusIcons[1].parentElement.parentElement.classList.add('active');
        }

        const productImages = document.querySelectorAll('.product-image img');
        productImages.forEach(img => {
            img.onerror = function() {
                this.src = 'data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24" fill="%23ff3c2f"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>';
                this.alt = 'Product Image';
            };
        });
    });
</script>