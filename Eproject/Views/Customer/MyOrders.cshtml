@model List<Order>

@{
    Layout = "_Layout";
}

<style>
   
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800;900&display=swap');

    
    .orders-container {
        background: linear-gradient(135deg, #f9f9f9 0%, #fff5f5 100%);
        min-height: 100vh;
        padding: 40px 20px;
        font-family: 'Poppins', sans-serif;
        margin-bottom: 40px;
    }

   
    .orders-header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

        .orders-header h1 {
            font-size: 42px;
            font-weight: 800;
            background: linear-gradient(90deg, #ff3c2f 0%, #111 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
            font-family: 'Montserrat', sans-serif;
        }

    .orders-subtitle {
        color: #666;
        font-size: 18px;
        max-width: 600px;
        margin: 0 auto 30px;
        line-height: 1.6;
    }

    .orders-badge {
        display: inline-block;
        background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        color: white;
        padding: 8px 25px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 14px;
        letter-spacing: 0.5px;
        box-shadow: 0 5px 15px rgba(255, 60, 47, 0.2);
    }

    
    .orders-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 25px;
        margin-bottom: 50px;
    }

    .stat-card {
        background: white;
        padding: 30px 25px;
        border-radius: 18px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        text-align: center;
        position: relative;
        overflow: hidden;
        border: 1px solid #f0f0f0;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(255, 60, 47, 0.15);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff3c2f, #ff6b6b);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #fff5f5 0%, #ffeaea 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        color: #ff3c2f;
        font-size: 24px;
    }

    .stat-value {
        font-size: 36px;
        font-weight: 800;
        color: #222;
        margin-bottom: 10px;
        line-height: 1;
    }

    .stat-label {
        font-size: 14px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

   
    .orders-content {
        max-width: 1200px;
        margin: 0 auto;
    }

   
    .empty-orders {
        background: white;
        border-radius: 20px;
        padding: 80px 40px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        border: 1px solid #f0f0f0;
    }

    .empty-icon {
        font-size: 80px;
        color: #ff3c2f;
        margin-bottom: 30px;
        opacity: 0.7;
    }

    .empty-title {
        font-size: 32px;
        font-weight: 700;
        color: #222;
        margin-bottom: 15px;
    }

    .empty-subtitle {
        font-size: 18px;
        color: #666;
        margin-bottom: 40px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.6;
    }

    .btn-start-shopping {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        padding: 16px 35px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
    }

        .btn-start-shopping:hover {
            background: linear-gradient(90deg, #111 0%, #333 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            color: white;
        }

  
    .orders-table-section {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
        margin-bottom: 50px;
    }

    .table-header {
        background: linear-gradient(90deg, #111 0%, #222 100%);
        padding: 25px 30px;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

        .table-header h3 {
            font-size: 22px;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .table-header h3 i {
                color: #ff3c2f;
            }

    .order-count {
        background: #ff3c2f;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

   
    .orders-table {
        width: 100%;
        border-collapse: collapse;
    }

        .orders-table thead {
            background: #f9f9f9;
            border-bottom: 2px solid #f0f0f0;
        }

        .orders-table th {
            padding: 20px 25px;
            text-align: left;
            font-weight: 700;
            color: #222;
            font-size: 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 3px solid #ff3c2f;
        }

        .orders-table tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
        }

            .orders-table tbody tr:hover {
                background: #fff9f9;
                transform: scale(1.005);
                box-shadow: 0 5px 15px rgba(255, 60, 47, 0.1);
            }

        .orders-table td {
            padding: 25px;
            color: #444;
            font-weight: 500;
            vertical-align: middle;
        }

    
    .order-id {
        font-weight: 700;
        color: #222;
        font-size: 16px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .order-id-badge {
        background: #f0f0f0;
        padding: 4px 12px;
        border-radius: 6px;
        font-family: monospace;
        font-size: 14px;
    }

   
    .order-date {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .date-day {
        font-size: 18px;
        font-weight: 700;
        color: #222;
    }

    .date-month {
        font-size: 14px;
        color: #666;
    }

    
    .order-total {
        font-weight: 800;
        color: #222;
        font-size: 20px;
    }

    .order-currency {
        color: #ff3c2f;
        font-size: 16px;
        margin-right: 5px;
    }

   
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 18px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-delivered {
        background: rgba(76, 175, 80, 0.1);
        color: #4CAF50;
        border: 1px solid rgba(76, 175, 80, 0.2);
    }

    .status-pending {
        background: rgba(255, 193, 7, 0.1);
        color: #FFC107;
        border: 1px solid rgba(255, 193, 7, 0.2);
    }

    .status-processing {
        background: rgba(33, 150, 243, 0.1);
        color: #2196F3;
        border: 1px solid rgba(33, 150, 243, 0.2);
    }

    .status-cancelled {
        background: rgba(244, 67, 54, 0.1);
        color: #F44336;
        border: 1px solid rgba(244, 67, 54, 0.2);
    }

    
    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-view {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: linear-gradient(90deg, #ff3c2f 0%, #ff6b6b 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
        border: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-view:hover {
            background: linear-gradient(90deg, #111 0%, #333 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            color: white;
        }

    .btn-track {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #f9f9f9;
        color: #222;
        padding: 10px 20px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
        border: 1px solid #ddd;
    }

        .btn-track:hover {
            background: #222;
            color: white;
            border-color: #222;
        }

   
    .quick-actions {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
        flex-wrap: wrap;
    }

    .quick-action-btn {
        flex: 1;
        min-width: 200px;
        display: flex;
        align-items: center;
        gap: 15px;
        background: white;
        padding: 20px 25px;
        border-radius: 16px;
        text-decoration: none;
        color: #222;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

        .quick-action-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(255, 60, 47, 0.15);
            border-color: #ff3c2f;
        }

    .quick-action-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #fff5f5 0%, #ffeaea 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ff3c2f;
        font-size: 24px;
    }

    .quick-action-text h4 {
        font-size: 16px;
        font-weight: 700;
        margin: 0 0 5px 0;
        color: #222;
    }

    .quick-action-text p {
        font-size: 13px;
        color: #666;
        margin: 0;
    }

   
    @@media (max-width: 992px) {
        .orders-table {
            display: block;
            overflow-x: auto;
        }

            .orders-table th,
            .orders-table td {
                padding: 15px;
            }

        .stat-value {
            font-size: 30px;
        }
    }

    @@media (max-width: 768px) {
        .orders-header h1 {
            font-size: 32px;
        }

        .table-header {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .quick-actions {
            flex-direction: column;
        }

        .quick-action-btn {
            width: 100%;
        }

        .action-buttons {
            flex-direction: column;
            gap: 8px;
        }

        .btn-view, .btn-track {
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 576px) {
        .orders-stats {
            grid-template-columns: 1fr;
        }

        .orders-header h1 {
            font-size: 28px;
        }

        .empty-title {
            font-size: 24px;
        }
    }

    
    .status-color-delivered {
        background: #4CAF50;
    }

    .status-color-pending {
        background: #FFC107;
    }

    .status-color-processing {
        background: #2196F3;
    }

    .status-color-cancelled {
        background: #F44336;
    }
</style>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="orders-container">
    <div class="orders-content">
       
        <div class="orders-header">
            <h1>My Orders</h1>
            <p class="orders-subtitle">Track, view, and manage all your grocery orders in one place</p>
            <span class="orders-badge">
                <i class="fas fa-box-open"></i> ORDER HISTORY
            </span>
        </div>

       
        <div class="quick-actions">
            <a asp-controller="Customer" asp-action="Dashboard" class="quick-action-btn">
                <div class="quick-action-icon">
                    <i class="fas fa-tachometer-alt"></i>
                </div>
                <div class="quick-action-text">
                    <h4>Back to Dashboard</h4>
                    <p>Return to your account overview</p>
                </div>
            </a>

            <a href="#" class="quick-action-btn">
                <div class="quick-action-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <div class="quick-action-text">
                    <h4>Track Delivery</h4>
                    <p>Live tracking for active orders</p>
                </div>
            </a>

            <a asp-controller="Home" asp-action="Index" class="quick-action-btn">
                <div class="quick-action-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="quick-action-text">
                    <h4>Continue Shopping</h4>
                    <p>Add more items to your cart</p>
                </div>
            </a>
        </div>

        @if (Model.Count == 0)
        {
         
            <div class="empty-orders">
                <div class="empty-icon">
                    <i class="fas fa-shopping-basket"></i>
                </div>
                <h2 class="empty-title">No Orders Yet</h2>
                <p class="empty-subtitle">
                    You haven't placed any orders with QUICKMART yet. Start your grocery shopping journey today!
                </p>
                <a asp-controller="Home" asp-action="Index" class="btn-start-shopping">
                    <i class="fas fa-store"></i> Start Shopping
                </a>
            </div>
        }
        else
        {
           
            <div class="orders-stats">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-boxes"></i>
                    </div>
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Total Orders</div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-value">@Model.Count(o => o.PaymentStatus == "Delivered")</div>
                    <div class="stat-label">Delivered</div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-value">@Model.Count(o => o.PaymentStatus == "Pending" || o.PaymentStatus == "Processing")</div>
                    <div class="stat-label">Active</div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-indian-rupee-sign"></i>
                    </div>
                    <div class="stat-value">₹@Model.Sum(o => o.TotalAmount)</div>
                    <div class="stat-label">Total Spent</div>
                </div>
            </div>

          
            <div class="orders-table-section">
                <div class="table-header">
                    <h3><i class="fas fa-receipt"></i> Order History</h3>
                    <span class="order-count">@Model.Count Orders Found</span>
                </div>

                <div class="table-responsive">
                    <table class="orders-table">
                        <thead>
                            <tr>
                                <th>Order Details</th>
                                <th>Date & Time</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model)
                            {
                               
                                var statusClass = "status-pending";
                                if (o.PaymentStatus == "Delivered") statusClass = "status-delivered";
                                else if (o.PaymentStatus == "Processing") statusClass = "status-processing";
                                else if (o.PaymentStatus == "Cancelled") statusClass = "status-cancelled";

                                <tr>
                                    <td>
                                        <div class="order-id">
                                            <i class="fas fa-hashtag"></i>
                                            <span class="order-id-badge">#@o.OrderId</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="order-date">
                                            <span class="date-day">@o.DateOfPurchase.ToString("dd MMM, yyyy")</span>
                                            <span class="date-month">@o.DateOfPurchase.ToString("hh:mm tt")</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="order-currency">₹</span>
                                        <span class="order-total">@o.TotalAmount</span>
                                    </td>
                                    <td>
                                        <span class="status-badge @statusClass">
                                            <i class="fas fa-circle"></i>
                                            @o.PaymentStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="OrderDetails"
                                               asp-route-id="@o.OrderId"
                                               class="btn-view">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            @if (o.PaymentStatus != "Delivered" && o.PaymentStatus != "Cancelled")
                                            {
                                                <a href="#" class="btn-track">
                                                    <i class="fas fa-truck"></i> Track
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

           
            <div style="text-align: center; margin-top: 40px; color: #666; font-size: 14px;">
                <p>
                    <i class="fas fa-info-circle"></i> Need help with an order?
                    <a href="#" style="color: #ff3c2f; font-weight: 600; text-decoration: none;">
                        Contact our support team
                    </a>
                </p>
            </div>
        }
    </div>
</div>

<script>
    // Add hover effects and animations
    document.addEventListener('DOMContentLoaded', function() {
        // Add animation to stats cards
        const statCards = document.querySelectorAll('.stat-card');
        statCards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;
            card.classList.add('animate__animated', 'animate__fadeInUp');
        });

        // Add animation to table rows
        const tableRows = document.querySelectorAll('.orders-table tbody tr');
        tableRows.forEach((row, index) => {
            row.style.animationDelay = `${index * 0.05}s`;
            row.classList.add('animate__animated', 'animate__fadeIn');
        });

        // Status color indicators
        const statusBadges = document.querySelectorAll('.status-badge');
        statusBadges.forEach(badge => {
            const status = badge.textContent.trim().toLowerCase();
            const icon = badge.querySelector('i');

            if (status.includes('delivered')) {
                icon.style.color = '#4CAF50';
            } else if (status.includes('pending')) {
                icon.style.color = '#FFC107';
            } else if (status.includes('processing')) {
                icon.style.color = '#2196F3';
            } else if (status.includes('cancelled')) {
                icon.style.color = '#F44336';
            }
        });
    });
</script>