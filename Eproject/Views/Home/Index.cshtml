                            transform: translateY(15px);
                        }

                        to {
                            opacity: 1;
                            transform: translateY(0);
                        }
                    }

                    .category-card {
                        animation: fadeInUp 0.5s ease-out;
                        animation-fill-mode: both;
                    }

