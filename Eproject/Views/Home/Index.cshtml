                @foreach (var block in Model.CategoryProducts)
                {
                    <div class="category-block">
                        <div class="category-header">
                            <h3 class="category-title">@block.Key</h3>
                            <a href="/Products/ByCategory/@block.Value.FirstOrDefault()?.CategoryId" class="category-link">
                                <span>View All</span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>

                        <div class="products-grid">
                            @foreach (var p in block.Value)
                            {
                                var hasDiscount = p.discount > p.unitCost;
                                var discountPercent = hasDiscount ? ((p.discount - p.unitCost) * 100) / p.discount : 0;

                                <div class="product-card">
                                    <div class="product-badge">
                                        @if (hasDiscount)
                                        {
                                            <div class="discount-badge">
                                                <i class="fas fa-tag"></i> @Math.Round(discountPercent)% OFF
                                            </div>
                                        }
                                        <div class="category-badge">
                                            @p.Category?.CategoryName
                                        </div>
                                    </div>

                                    <div class="product-image-container">
                                        <a href="/Products/Details/@p.id">
                                            <img src="~/images/@p.image" style="height: 250px; width: auto;" class="product-image" alt="@p.ProductName"
                                                 onerror="this.src='https://via.placeholder.com/300x220/f5f5f5/666?text=Product+Image'" />
                                        </a>
                                    </div>

                                    <div class="product-content">
                                        <h4 class="product-title">
                                            <a href="/Products/Details/@p.id">@p.ProductName</a>
                                        </h4>

                                        <div class="product-pricing">
                                            <div class="current-price">
                                                <span class="price-currency">₹</span>@p.unitCost
                                                @if (hasDiscount)
                                                {
                                                    <span class="original-price">₹@p.discount</span>
                                                }
                                            </div>
                                        </div>

                                        <div class="product-stock">
                                            <span class="stock-indicator @(p.quantity > 0 ? "in-stock-indicator" : "out-stock-indicator")"></span>
                                            <span>
                                                @if (p.quantity > 0)
                                                {
                                                    <text>In Stock</text>
                                                }
                                                else
                                                {
                                                    <text>Out of Stock</text>
                                                }
                                            </span>
                                        </div>

                                        <div class="product-actions">
                                            <a href="/Products/Details/@p.id" class="view-details-btn">
                                                <i class="fas fa-eye"></i>
                                                <span>View Details</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
